{
  "permissions": {
    "allow": [
      "Bash(bun *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(node *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(ag *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(diff *)",
      "Bash(echo *)",
      "Bash(printf *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(touch *)",
      "Bash(chmod *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(whoami)",
      "Bash(env)",
      "Bash(printenv *)",
      "Bash(date *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(jq *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(cut *)",
      "Bash(tr *)",
      "Bash(xargs *)",
      "Bash(tsc *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(biome *)",
      "Bash(docker compose *)",
      "Bash(docker build *)",
      "Bash(docker ps *)",
      "Bash(docker logs *)",
      "Bash(tmux *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(rsync *)",
      "Read",
      "Write",
      "Edit"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'INPUT=$(cat); if echo \"$INPUT\" | grep -qE \"^(git|docker)\"; then exit 0; fi; if echo \"$INPUT\" | grep -qiE \"(DROP TABLE|DROP DATABASE|DELETE FROM|TRUNCATE|UPDATE .* SET|ALTER TABLE|psql.*-c|mysql.*-e|mongosh.*--eval)\"; then echo \"BLOCK: Dangerous SQL/database command detected.\"; exit 2; fi; if echo \"$INPUT\" | grep -qiE \"(ssh.*(staging|prod|production)|deploy.*(staging|prod))\"; then echo \"BLOCK: Production/staging deployment detected.\"; exit 2; fi'"
          }
        ]
      }
    ]
  }
}
