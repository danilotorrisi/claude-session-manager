{
  "name": "claude-session-manager",
  "version": "1.0.0",
  "description": "CLI tool to manage Claude Code sessions across local and remote machines using tmux and git worktrees",
  "type": "module",
  "bin": {
    "csm": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test --test-name-pattern '(tmux|worktree|config|CLI)'",
    "test:integration": "bun test --test-name-pattern 'integration'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.10",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4"
  }
}
