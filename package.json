{
  "name": "claude-session-manager",
  "version": "1.3.0",
  "description": "CLI tool to manage Claude Code sessions across local and remote machines using tmux and git worktrees",
  "type": "module",
  "bin": {
    "csm": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test --test-name-pattern '(tmux|worktree|config|CLI)'",
    "test:integration": "bun test --test-name-pattern 'integration'",
    "typecheck": "tsc --noEmit",
    "web:dev": "vite",
    "web:build": "tsc && vite build",
    "web:preview": "vite preview"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "ink-testing-library": "^4.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "3",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@heroui/react": "2",
    "@heroui/system": "2",
    "@heroui/theme": "2",
    "@tanstack/react-query": "^5.90.21",
    "axios": "^1.13.5",
    "framer-motion": "^12.34.0",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "zustand": "^5.0.11"
  }
}
